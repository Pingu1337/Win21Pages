@page "/Posts/DeletePost/{postId}"
@model Win21Pages.Pages.Posts.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (@Model.Message != null)
{
    <div class="px-5 mx-auto rounded-3 border-danger" style="background: lightyellow; width: fit-content; border: 3px solid;">
        <h1 class="text-danger text-center py-5">@Model.Message</h1>
    </div>
}

@if (@Model.RemovablePost != null)
{
    <div class="p-4 pb-2 mb-4 text-black rounded-3" style="background: #F0E047;">
        <div class="container-fluid py-5">
            <h2 class="text-center">Are you sure you want to delete the post "<i class="text-white">@Model.RemovablePost.PostName</i>" ?</h2>
            <p class="fs-4 pb-0 mb-0 text-center fw-light text-black">When you delete the post it will be <span class="text-danger fw-normal">permanently removed</span> from the server.</p>
            <div class="d-flex justify-content-center mt-4">
                <a asp-area="" asp-page="/MyUploads" class="btn mx-2" style="background: #ffffff;">Cancel</a>
                <button type="button" class="btn btn-danger mx-2" data-bs-toggle="modal" href="#AreYouSure">Remove Post</button>
            </div>
        </div>
    </div>


    

    <div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" id="AreYouSure" tabindex="-1" aria-labelledby="AreYouSureLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="AreYouSureLabel">Are you sure?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this post forever?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-bs-dismiss="modal">Close</button>
                    <form asp-route-id="@Model.RemovablePost.Id" method="post">
                    <button class="btn btn-danger"> Im Sure </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}


<h1>@Model.Test</h1>